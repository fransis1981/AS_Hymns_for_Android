    <integer name="default_recents_capacity">20</integer>

    <integer name="default_suggestions_capacity">10</integer>

    <!-- Values related to keypad and circle buttons -->
    <integer name="circleButton_BlurRadius">6</integer>

    <!-- Default positioning of the controls fragment (it's on the left side of the screen) -->
    <bool name="default_controls_on_the_left">true</bool>

    <!-- Arrays to support preferences -->
    <string-array name="pref_international_labels">
        <item>@string/pref_language_it</item>
        <item>@string/pref_language_pt</item>
    </string-array>
    <string-array name="pref_international_values">
        <item>it</item>
        <item>pt</item>
    </string-array>
    <string name="pref_international_defaultvalue">it</string>
